{
  "name": "be-heybook",
  "private": true,
  "version": "1.0.0",
  "author": "duocanh",
  "description": "Backend API for an online store selling books and stationery",
  "engines": {
    "node": ">=18.x"
  },
  "scripts": {
    "lint": "eslint src --ext js --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write .",
    "clean": "rimraf build && mkdir build",
    "build-babel": "babel ./src -d ./build/src",
    "build": "npm run clean && npm run build-babel",
    "production": "npm run build && node ./build/src/server.js",
    "dev": "nodemon --exec babel-node ./src/server.js",
    "db:create": "npx sequelize-cli db:create",
    "db:drop": "npx sequelize-cli db:drop",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo",
    "db:migrate:undo:all": "npx sequelize-cli db:migrate:undo:all",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:seed:undo": "npx sequelize-cli db:seed:undo:all",
    "db:seed:custom": "node run-seeders.js",
    "db:reset": "npm run db:drop && npm run db:create && npm run db:migrate && npm run db:seed:custom",
    "db:reset:soft": "npm run db:migrate:undo:all && npm run db:migrate && npm run db:seed:custom"
  },
  "dependencies": {
    "@babel/runtime": "^7.27.0",
    "async-exit-hook": "^2.0.1",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.6.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.13",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "google-auth-library": "^10.1.0",
    "http-status-codes": "^2.3.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "mysql2": "^3.14.0",
    "qs": "^6.14.0",
    "sequelize": "^6.37.7",
    "sequelize-auto": "^0.8.8",
    "sequelize-cli": "^6.6.2",
    "socket.io": "^4.8.1",
    "streamifier": "^0.1.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.10",
    "@babel/node": "^7.26.0",
    "@babel/plugin-transform-runtime": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.1.1",
    "globals": "^15.15.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1"
  }
}